<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.videoplayer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_video_player"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_video_player"
        android:supportsRtl="true"
        android:theme="@style/Theme.VideoPlayer">
        <activity android:name=".VideoPlayerActivity" android:theme="@style/VideoPlayerTheme"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>